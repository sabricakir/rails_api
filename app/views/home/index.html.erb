<% if notice %>
  <div class="bg-green-100 p-2 rounded-md">
      <p class="text-green-600"><%= notice %></p>
  </div>
<% end %>

<div class="flex justify-center items-center max-w-7xl mx-auto mt-24">
  <div class="flex flex-col justify-between items-center">
    <div class="mt-4">
      <p class="text-gray-700">Signed in as <strong><%= Current.user.email %></strong></p>
    </div>

    <h2 class="text-2xl font-semibold mt-8">Login and Verification</h2>

    <div class="mt-4">
      <%= link_to "Change Password", edit_password_path, class: "text-blue-500 hover:underline block" %>
    </div>

    <div class="mt-4">
      <%= link_to "Change Email Address", edit_identity_email_path, class: "text-blue-500 hover:underline block" %>
    </div>

    <h2 class="text-2xl font-semibold mt-8">Access History</h2>

    <div class="mt-4">
      <%= link_to "Devices & Sessions", sessions_path, class: "text-blue-500 hover:underline block" %>
    </div>

    <div class="mt-8">
      <%= button_to "Log Out", Current.session, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md" %>
    </div>
  </div>
</div>