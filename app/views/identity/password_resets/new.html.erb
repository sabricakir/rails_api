<% if alert %>
  <div class="bg-red-100 p-2 rounded-md mb-4">
    <p class="text-red-600"><%= alert %></p>
  </div>
<% end %>

<div class="max-w-7xl mx-auto mt-24">
  <div class="bg-white p-6 rounded-md shadow-md">
    <h1 class="text-2xl font-semibold mb-4">Forgot your password?</h1>

    <%= form_with(url: identity_password_reset_path) do |form| %>
      <div class="mb-4">
        <%= form.label :email, class: "block text-gray-700" %>
        <%= form.email_field :email, required: true, autofocus: true, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= form.submit "Send password reset email", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mt-4">
        <%= link_to "Back", root_path, class: "text-blue-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
