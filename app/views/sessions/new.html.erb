<% if notice %>
  <div class="bg-green-100 p-2 rounded-md mb-4">
    <p class="text-green-600"><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="bg-red-100 p-2 rounded-md mb-4">
    <p class="text-red-600"><%= alert %></p>
  </div>
<% end %>

<div class="max-w-7xl mx-auto mt-24">
  <div class="w-96 mx-auto bg-white p-6 rounded-md shadow-md">
    <h1 class="text-2xl font-semibold mb-4">Sign in</h1>

    <%= form_with(url: sign_in_path) do |form| %>
      <div class="mb-4">
        <%= form.label :email, class: "block text-gray-700" %>
        <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :password, class: "block text-gray-700" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= form.submit "Sign in", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Sign up", sign_up_path, class: "text-blue-500 hover:underline" %> |
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
