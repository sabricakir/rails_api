<% if notice %>
  <div class="bg-green-100 p-2 rounded-md mb-4">
    <p class="text-green-600"><%= notice %></p>
  </div>
<% end %>

<div class="max-w-7xl mx-auto mt-24">
  <div class="bg-white p-6 rounded-md shadow-md">
    <h1 class="text-2xl font-semibold mb-4">Devices & Sessions</h1>

    <div id="sessions">
      <% @sessions.each do |session| %>
        <div id="<%= dom_id session %>" class="mb-4 border p-4 rounded-md shadow-md">
          <p>
            <strong>User Agent:</strong>
            <%= session.user_agent %>
          </p>

          <p>
            <strong>Ip Address:</strong>
            <%= session.ip_address %>
          </p>

          <p>
            <strong>Created at:</strong>
            <%= session.created_at %>
          </p>

          <p class="mt-4">
            <%= button_to "Log out", session, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:border-red-300" %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="mt-4">
      <%= link_to "Back", root_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
